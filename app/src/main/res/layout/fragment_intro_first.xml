<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m">

        <ImageView
            android:id="@+id/iv_intro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_xl"
            android:layout_marginTop="@dimen/margin_xl"
            android:src="@drawable/ic_intro_first_01" />

        <ImageView
            android:id="@+id/iv_intro_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_intro_1"
            android:layout_marginTop="@dimen/margin_l"
            android:src="@drawable/ic_intro_first_02" />

        <ImageView
            android:id="@+id/iv_intro_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_intro_2"
            android:layout_marginLeft="@dimen/margin_xxl"
            android:layout_marginTop="@dimen/margin_xxl"
            android:src="@drawable/ic_intro_first_03" />

        <ImageView
            android:id="@+id/iv_intro_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_intro_2"
            android:layout_marginLeft="@dimen/margin_xxl"
            android:layout_marginRight="@dimen/margin_xl"
            android:layout_marginTop="@dimen/margin_l"
            android:layout_toRightOf="@+id/iv_intro_3"
            android:src="@drawable/ic_intro_first_04" />

        <ImageView
            android:id="@+id/iv_intro_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_intro_1"
            android:layout_marginLeft="@dimen/margin_xl"
            android:layout_marginTop="@dimen/margin_xxl"
            android:layout_toRightOf="@+id/iv_intro_2"
            android:src="@drawable/ic_intro_first_05" />

        <ImageView
            android:id="@+id/iv_intro_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_intro_5"
            android:layout_marginLeft="@dimen/margin_xxl"
            android:layout_toRightOf="@+id/iv_intro_1"
            android:src="@drawable/ic_intro_first_06" />

        <ImageView
            android:id="@+id/iv_intro_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_intro_4"
            android:layout_marginBottom="@dimen/margin_l"
            android:layout_marginLeft="@dimen/margin_xl"
            android:layout_toRightOf="@id/iv_intro_5"
            android:src="@drawable/ic_intro_first_07" />


    </RelativeLayout>

</LinearLayout>
